@model Reward

<form asp-controller="Rewards" asp-action="ChangeReward">
    <input type="hidden" asp-for="Id" />
    <div class="entitiesFormWrap">
        <div class="inputProperties">
            <h2>Change reward</h2>
            <div class="inputBox">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="inputBox">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="6" class="rewardDescriptionInputTextBox"></textarea>
                <span asp-validation-for="Description"></span>
            </div>

            <div class="inputBox">
                <button type="submit">Change</button>
                <button type="button" onclick="location.href ='/Rewards'">Cancel</button>
            </div>
        </div>
    </div>
    
</form>