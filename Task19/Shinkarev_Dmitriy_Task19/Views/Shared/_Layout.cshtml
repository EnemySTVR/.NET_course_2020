<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/main.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="mainWrap">
        <div class="header">
            <div>
                <h2><a asp-controller="Home" asp-action="Index" class="link">Users and their rewards</a></h2>
            </div>
            <div class="navigation">
                <a asp-controller="Users" asp-action="Index" class="navigationLink link">Users</a>
                <a asp-controller="Rewards" asp-action="Index"class="navigationLink link">Rewards</a>
            </div>
        </div>
        <div class="contentWrap">
            @RenderBody()
        </div>
        <div class="footer">
            Epam .NET cource 2020 Shinkarev Dmitriy
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
